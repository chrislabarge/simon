<!DOCTYPE html>
<html>
<head>
  <title>Simon</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>


<body>
<style>
button{
	width: 200px;
	height: 50px;
}
</style>




<%= yield %>

	<% if game_over == true  %>
 	 <script type="text/javascript">
 	   window.location.href="/over"
 	 </script>
	<% end %>  	
<%unless current_page?("/over")%>
<a href="/red"><button>Red</button></a><br><br>
<a href="/yellow"><button>Yellow</button></a><br><br>
<a href="green"><button>Green</button></a><br><br>
<a href="/blue"><button>Blue</button></a><br><br>

	<h3>pattern:<%=pattern%></h3>
	<h4>turns_left:<%=turns_left%></h4>
	<br><br>
	<a href="<%=root_path%>">home</a>
<%else%>	
	<br><br>
	<a href="<%=root_path%>" ><button>Play Again</button> </a>
	<br>
	<a href="/home" ><button>High Scores</button> </a>
<%end%>	



</body>
</html>
